        },
        {
            "label": "ROS2 : GENERAL : info : topic",
            "type": "shell",
            "command": "${workspaceFolder}/../../script/mrs.sh",
            "args": [
                "--mrs_config=${workspaceFolder}/../../script/config.json",
                "aros2",
                "topic",
                "list",
                ""
            ]
        },
        {
            "label": "ROS2 : GENERAL : info : param",
            "type": "shell",
            "command": "${workspaceFolder}/../../script/mrs.sh",
            "args": [
                "--mrs_config=${workspaceFolder}/../../script/config.json",
                "aros2",
                "param",
                "list",
                "",
                "",
                ""
            ]
        },
        {
            "label": "ROS2 : GENERAL : info : pkg",
            "type": "shell",
            "command": "${workspaceFolder}/../../script/mrs.sh",
            "args": [
                "--mrs_config=${workspaceFolder}/../../script/config.json",
                "aros2",
                "pkg",
                "executables",
                "",
                "",
                ""
            ]
