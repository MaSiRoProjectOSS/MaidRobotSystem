        //////////////////////////////////////////////////////////////
        {
            "label": "ROS2 : BUILD : DEBUG",
            "type": "shell",
            "command": "${workspaceFolder}/../../script/mrs.sh",
            "args": [
                "--mrs_config=${workspaceFolder}/../../script/config.json",
                "mrs_build",
                "build",
                "debug",
                "",
                "",
                ""
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "ROS2 : BUILD : [ALL] ",
            "type": "shell",
            "command": "${workspaceFolder}/../../script/mrs.sh",
            "args": [
                "--mrs_config=${workspaceFolder}/../../script/config.json",
                "mrs_build",
                "build",
                "release",
                "",
                "",
                ""
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "ROS2 : BUILD : CLEAN",
            "type": "shell",
            "command": "${workspaceFolder}/../../script/mrs.sh",
            "args": [
                "--mrs_config=${workspaceFolder}/../../script/config.json",
                "mrs_build",
                "clean",
                "",
                "",
                "",
                ""
